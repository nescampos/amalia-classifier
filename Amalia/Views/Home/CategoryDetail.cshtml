@model Amalia.Models.CategoryDetailViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Manage the category";
}

@Html.ActionLink("Back to list", "Categories", "Home", null, new { @class = "btn btn-primary" })

<h2>Manage the @Model.Category.Name category.</h2>


<div class="row">
    <div class="col-md-8">
        
        <h3>Examples for AI classification</h3>
        <table class="table table-responsive table-condensed">
            <thead>
                <tr>
                    <th>Text</th>
                </tr>
            </thead>
            @foreach(var category in Model.Examples)
            {
                <tr>
                    <td>@category.Name</td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-4">

        <h3>Add example</h3>
        @using(Html.BeginForm())
        {
            <input type="hidden" name="id" value="@Model.Category.Id" />
            <input type="text" name="newExample" class="form-control" /> <br />
            <input type="submit" value="Add" class="btn-primary" />
        }
    </div>
</div>